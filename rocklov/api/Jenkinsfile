pipeline {
    agent {
        docker{
            image 'ruby'
            args '--network rocklov-network'
        }
    }

    stages {
        stage('Prep'){
            steps {
                sh 'cd rocklov cd api && bundle install'
            }
        }
        stage('Testing') {
            steps {
                sh 'cd rocklov cd api && rspec'
            }
        }
    }
}
